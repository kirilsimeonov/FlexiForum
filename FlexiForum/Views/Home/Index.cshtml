@model FlexiForum.Models.HomeViewModels.IndexHomeModel

<div class="container body-content">


    <div class="row homePageBigPic">


        <div class="col-md-7 homePageWelcome">
            
            <div class="homePageHeader">SHARE EVERYTHING</div>



            <!--<p class="homePageSubHeader">Flexi Forum is here for you.</p>--->
            <div>
                <form asp-controller="Search" asp-action="Search" method="post">


                    <input asp-for="SearchQuery" type="text" class="homeSearch" placeholder="Search." />
                </form>


            </div>
        </div>
        <div class="col-md-6">
        </div>
    </div>


    <div class="row homePageContent">


        <h3 id="lastPosts">Last Postings</h3>
        <table class="table-hover table" id="lastPostsTable">
            <tbody>

                @foreach (var post in Model.LastPosts)
                {
                    <tr>
                        <td>
                            <div class="forumPic" style="background-image: url(@post.Forum.Picture); background-size:100%"></div>


                            <div class="postTitle">
                                <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">
                                    @post.Title
                                </a>
                            </div>
                            <div class="postUnderTitle">
                                @if (post.RepliesNumber == 1)
                                {
                                    <span>@post.RepliesNumber Reply</span>
                                }
                                @if (post.RepliesNumber > 1)
                                {
                                    <span>@post.RepliesNumber Replies</span>
                                }
                                @if (post.RepliesNumber == 0)
                                {
                                    <span>No Replies!</span>
                                }



                                <span class="postbyUser">
                                    <a asp-controller="Profile" asp-action="Info" as-route-id="@post.AuthorId">@post.Author</a>
                                </span>
                            </div>
                        </td>

                    </tr>
                }

            </tbody>



        </table>

    </div>

</div>
